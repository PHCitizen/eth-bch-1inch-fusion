// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Chain {
  BitcoinCash
  Eth
}

model SrcTimelock {
  id             Int    @id @default(autoincrement())
  finalityLock   Int
  resolverUnlock Int
  publicUnlock   Int
  resolverCancel Int
  publicCancel   Int
  Order          Order?
}

model DstTimelock {
  id             Int    @id @default(autoincrement())
  finalityLock   Int
  resolverUnlock Int
  publicUnlock   Int
  resolverCancel Int
  Order          Order?
}

model Order {
  id   Int    @id @default(autoincrement())
  uuid String @default(uuid())

  srcChain      Chain
  srcTimelock   SrcTimelock @relation(fields: [srcTimelockId], references: [id])
  srcTimelockId Int         @unique

  dstChain      Chain
  dstTimelock   DstTimelock @relation(fields: [dstTimelockId], references: [id])
  dstTimelockId Int         @unique

  makerAsset   String
  takerAsset   String
  makerAddr    String
  takerAddr    String
  makingAmount BigInt
  takingAmount BigInt

  hashLock String
}
